{% extends 'Ansi\GhassenBundle::layout.html.twig' %}  

{% block users %}

    <div class="col-md-6">
        <!-- USERS LIST -->
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Liste des amis</h3>
                <div class="box-tools pull-right">
              {% render(controller('AcmeUserBundle:User:recherche')) %}
                </div>
            </div><!-- /.box-header -->
            
                <div class="box-body no-padding">
                    {% if friends|length != 0 %}
                    <ul class="users-list clearfix">
                        
                        {% for entity in friends %}
                        <li>
                            <img src="{{ asset(entity.photo) }}" alt="User Image"/>
                            <a class="users-list-name" href="{{ path('show_Messages', { 'id': entity.id }) }}">{{ entity.username }}</a> 
                        </li>
                          {% endfor %}
                    </ul><!-- /.users-list -->
                    <div class="navigation">
                    {{ knp_pagination_render(friends) }}
                </div>
                {% else %}
                Aucun utilisateurs
            {% endif %}
                </div><!-- /.box-body --> 
          
            <div class="box-footer text-center">
                
            </div><!-- /.box-footer -->
        </div><!--/.box -->
    </div><!-- /.col -->




{% endblock %} 