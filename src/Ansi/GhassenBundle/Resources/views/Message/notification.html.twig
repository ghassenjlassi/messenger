{% extends 'Ansi\GhassenBundle::layout.html.twig' %}   

{% block notification %}
    <div>
  <li class="dropdown messages-menu">
                <a  href="#notif" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-envelope-o"></i>
                  <section id="notification"></section>
                </a> <ul class="dropdown-menu">
                  <li class="header">Last messages</li>
                             
 <li>
                    <!-- inner menu: contains the actual data -->
                    <ul class="menu">
                     {% for entity in entity %}
                      <li><!-- start message -->
                        <a href="#">
                          <div class="pull-left">
                            <img src="{{ asset(entity.sender.photo) }}"  class="img-circle" alt="User Image"/>
                          </div>
                          <h4>
                            {{entity.sender.username }}
                            <small><i class="fa fa-clock-o"></i> {% if entity.date %}{{ entity.date|date('Y-m-d\\TH:i:sP') }} {% endif %}</small>
                          </h4>
                          <p>{{entity.Message}}</p>
                        </a>
                      </li><!-- end message -->
                      {% endfor %}
                    </ul>
                  </li></ul>
  </li> </div> 
{% endblock %}          